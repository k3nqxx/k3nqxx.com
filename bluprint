    <!-- JavaScript for customization and random letters -->
    <script>
        // Replace header background with your image URL
        document.getElementById('header-photo').style.backgroundImage = 'url("https://github.com/k3nqxx/header/blob/main/k3nqx.jpg?raw=true")';

        // Letters to display
        const letters = 'k3nqxx';
        
        // Randomly place letters
        function createLetter() {
            const letter = document.createElement('div');
            letter.classList.add('letter');
            letter.innerText = letters[Math.floor(Math.random() * letters.length)];

            // Random size, font, and position
            letter.style.fontSize = `${Math.random() * 100 + 20}px`;
            letter.style.left = `${Math.random() * 100}vw`;
            letter.style.top = `${Math.random() * 100}vh`;
            letter.style.fontFamily = Math.random() > 0.5 ? 'Arial, sans-serif' : 'Courier, monospace';

            document.body.appendChild(letter);

            // Remove the letter after some time
            setTimeout(() => letter.remove(), 5000);
        }

        // Create multiple letters at intervals
        setInterval(createLetter, 300);
    </script>

